@using PsychToGo.API.DTO;
@model LoginRequestDTO
<!DOCTYPE html>

<head>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>



<form method="post" asp-antiforgery="true">
    <div class="box">
        <div class="container">
            <div class="top-header">
                <span>Have an account?</span>
                <header>Login</header>
            </div>

            <div class="input-field">
                <input asp-for="UserName" type="text" class="input" placeholder="E-mail" required />
                <i class="bx bx-user"></i>
            </div>
            <div class="input-field">
                <input asp-for="Password" type="password" class="input" placeholder="Password" required />
                <i class="bx bx-lock-alt"></i>
            </div>
            <div class="input-field">
                <button asp-controller="Auth" asp-action="Login" type="submit" class="submit">Login</button>
            </div>
        </div>
    </div>
</form>
