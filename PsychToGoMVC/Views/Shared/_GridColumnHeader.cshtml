@using PsychToGo.Client.Enums;
@if (ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurrentSortOrder == SortOrderOptions.ASC.ToString())
{
    <th>
        <a href="~/@ViewBag.SortData/index?searchBy=@ViewBag.CurrentSearchBy&
        searchString=@ViewBag.CurrentSearchString&sortBy=@ViewBag.ColumnName&sortOrder=@nameof(SortOrderOptions.DESC)"><i class="fa-solid fa-sort-down"></i>@ViewBag.Display</a>
    </th>
}
else if (ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurrentSortOrder == SortOrderOptions.DESC.ToString())
{
    <th>
        <a href="~/@ViewBag.SortData/index?searchBy=@ViewBag.CurrentSearchBy&
        searchString=@ViewBag.CurrentSearchString&sortBy=@ViewBag.ColumnName&sortOrder=@nameof(SortOrderOptions.ASC)"><i class="fa-solid fa-sort-up"></i>@ViewBag.Display</a>
    </th>
}
else
{
    <th>
        <a href="~/@ViewBag.SortData/index?searchBy=@ViewBag.CurrentSearchBy&
        searchString=@ViewBag.CurrentSearchString&sortBy=@ViewBag.ColumnName&sortOrder=@nameof(SortOrderOptions.ASC)"><i class="fa-solid fa-sort-up"></i>@ViewBag.Display</a>
    </th>
}
