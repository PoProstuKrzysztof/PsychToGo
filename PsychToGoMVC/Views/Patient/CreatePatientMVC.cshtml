@model PatientViewModel

@{
    ViewData["Title"] = "Create Patient";
}

<body class="form-body">
    <div class="container-form">
        <div class="title-form">Edit</div>
        <div class="form-content">

            <form method="post" asp-antiforgery="true">
                <input asp-for="Id" hidden />

                <div class="user-details">
                    <div class="input-box-form">
                        <span class="details">Name</span>
                        <input type="text" asp-for="Name" placeholder="Enter name.." value="@Model.Name" required />
                    </div>
                    <div class="input-box-form">
                        <span class="details">Surname</span>
                        <input type="text" asp-for="LastName" placeholder="Enter last name.." value="@Model.LastName" required />
                    </div>
                    <div class="input-box-form">
                        <span class="details">Day of birth</span>
                        <input type="date" asp-for="DateOfBirth" placeholder="Enter your birthday.." value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" min="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                    </div>
                    <div class="input-box-form">
                        <span class="details">E-mail</span>
                        <input type="email" asp-for="Email" placeholder="Enter email.." value="@Model.Email" required />
                    </div>
                    <div class="input-box-form">
                        <span class="details">Phone</span>
                        <input type="tel" asp-for="Phone" placeholder="Enter phone.." value="@Model.Phone" required />
                    </div>
                    <div class="input-box-form">
                        <span class="details">Address</span>
                        <input type="text" asp-for="Address" placeholder="Enter address.." value="@Model.Address" required />
                    </div>
                    <div class="input-box-form">
                        <span class="details">Address</span>
                        @Html.DropDownListFor(model => model.PsychologistId, new SelectList(Model.Psychologists, "Id","Name"),"- Select - ")
                    </div>
                    <div class="input-box-form">
                        <span class="details">Psychiatrist</span>
                        @Html.DropDownListFor(model => model.PsychiatristId, new SelectList(Model.Psychiatrists, "Id","Name"),"- Select - ")
                    </div>
                    <div class="input-box-form">
                        <span class="details">Medicines</span>
                        @Html.ListBoxFor(model => model.MedicinesId, new MultiSelectList(Model.Medicines, "Id","Name"))

                    </div>
                </div>
                <div class="button">
                    <button asp-action="CreatePatientMVC" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</body>








@section Scripts {
    @{
        await Html.RenderPartialAsync( "_ValidationScriptsPartial" );
    }
}
