@using PsychToGo.API.DTO;
@model IEnumerable<MedicineDTO>


@{
    ViewData["Title"] = "Medicines";
    ViewBag.CurrentUrl = "~/Medicines/Index";
}

<head>
    <link rel="stylesheet" href="~/PsychToGo.Client.styles.css" asp-append-version="true" />
</head>


<form method="get" asp-action="Index">
    <h1 class="text-center">MEDICINES</h1>
    <div class="search-box flex">
        <div class="flex-1">
            <select class="search-input" name="searchBy">
                @foreach (var fields in ViewBag.SearchFields)
                {
                    if (fields.Key == ViewBag.CurrentSearchBy)
                    {
                        <option value="@fields.Key" selected="selected">@fields.Value</option>
                    }
                    <option value="@fields.Key">@fields.Value</option>
                }
            </select>
            <input type="search" id="search" name="searchString" value="@ViewBag.CurrentSearchString" class="search-input" placeholder="Search.." />
            <button class="btn btn-dark">Search</button>
            <a class="btn btn-danger" asp-action="Index">Clear all</a>
        </div>
        <hr />
        @if (User.IsInRole( "admin" ))
        {
            <p>
                <a class="btn btn-outline-primary" asp-action="CreateMedicineMVC">Add</a>
            </p>
        }


        <table class="table table-hover border shadow-lg">
            <thead>
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductionDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ExpireDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DailyDose)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ingredients)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InStock)
                    </th>
                    <th>
                        Operations
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var medicines in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => medicines.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => medicines.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => medicines.ProductionDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => medicines.ExpireDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => medicines.DailyDose)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => medicines.Ingredients)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => medicines.InStock)
                        </td>
                        @if (User.IsInRole( "admin" ))
                        {
                            <td>
                                <a class="btn btn-warning btn-sm" asp-action="EditMedicine" asp-route-id="@medicines.Id">Edit</a>
                                <a class="btn btn-danger btn-sm" asp-action="DeleteMedicine" asp-route-id="@medicines.Id">Delete</a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>

    </div>
</form>


